  },
  "homepage": "https://github.com/AdityaGupta150/learn-fullstack-javascript#readme",

  "dependencies": {
    "express" : "^4.16.4",
    "mongodb" : "^3.1.13",
    "prop-types" : "latest",  //Previously used to be part of React, 
    "react" : "latest",
    "react-dom" : "latest"
  },

  "devDependencies": {
    "@babel/node" : "latest",
          //'@' is a name-scoping in node packages
    "@babel/core" : "latest", //wrt. npm, these 'packages' are 'scoped' under the main @babel package
    "@babel/plugin-proposal-class-properties" : "",
    "@babel/preset-env" : "latest",
    "@babel/preset-react" : "latest",
    "babel-loader" : "latest",
    "eslint" : "latest",  //Looks for problematic patterns of code in JavaScript
    "eslint-plugin-react" : "latest",
    "nodemon" : "latest",
    "webpack" : "latest",
    "webpack-cli" : "latest"
